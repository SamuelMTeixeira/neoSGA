{% extends "admin.html.twig" %}

{% block adminContent %}
    <div class="d-flex">
        <div>
            <h1>{{ 'admin.unities.title'|trans }}</h1>
            <p>{{ 'admin.unities.subtitle'|trans }}</p>
        </div>
        <div class="ms-auto pt-3">
            <a href="{{ path('admin_unidades_new') }}" class="btn btn-primary">
                <i class="fa fa-plus"></i>
                {{ 'admin.unities.button.new'|trans }}
            </a>
        </div>
    </div>

    {% include "flashMessages.html.twig" %}

    <table class="table table-hover border">
        <thead>
            <tr class="table-primary">
                <th>#</th>
                <th>{{ 'label.name'|trans }}</th>
                <th>{{ 'label.status'|trans }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for unidade in unidades %}
                <tr>
                    <td>
                        {{ unidade.id }}
                    </td>
                    <td>
                        {{ unidade.nome }}
                    </td>
                    <td>
                        {% if unidade.ativo %}
                            <span class="text-success">{{ 'label.enabled'|trans }}</span>
                        {% else %}
                            <span class="text-danger">{{ 'label.disabled'|trans }}</span>
                        {% endif %}
                    </td>
                    <td class="text-end">
                        <a href="{{ path('admin_unidades_edit', { id: unidade.id }) }}" class="btn btn-secondary">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
