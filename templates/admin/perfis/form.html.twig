{% extends "admin.html.twig" %}

{% block adminContent %}
    <div class="d-flex">
        <div>
            <h1>{{ 'admin.roles.title'|trans }}</h1>
            <p>{{ 'admin.roles.subtitle'|trans }}</p>
        </div>
    </div>
    
    {% include 'flashMessages.html.twig' %}

    {{ form_start(form) }}

        <div class="row">
            <div class="col-md-8">
                {{ form_row(form.nome) }}

                {{ form_row(form.descricao) }}
            </div>
            <div class="col-md-4">
                <div class="well">
                    {{ form_row(form.modulos) }}
                </div>
            </div>
        </div>

        <div class="d-flex">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-check"></i> 
                {{ 'button.save'|trans }}
            </button>
            <a href="{{ path('admin_perfis_index') }}" class="btn btn-link text-decoration-none ms-2">
                <i class="fa fa-chevron-left"></i>
                {{ 'button.back'|trans }}
            </a>
            {% if entity.id %}
                <button type="submit" class="btn btn-danger ms-auto" form="delete-form">
                    <i class="fa fa-trash"></i> 
                    {{ 'button.remove'|trans }}
                </button>
            {% endif %}
        </div>

    {{ form_end(form) }}

    {% if entity.id %}
        <form
            id="delete-form"
            method="post"
            action="{{ path('admin_perfis_delete', { id: entity.id }) }}"
            onsubmit="return confirm('VocÃª realmente deseja remover?')">
        </form>
    {% endif %}
{% endblock %}
