{% extends "admin.html.twig" %}

{% block adminContent %}
    <div class="d-flex">
        <div>
            <h1>{{ 'admin.places.title'|trans }}</h1>
            <p>{{ 'admin.places.subtitle'|trans }}</p>
        </div>
        <div class="ms-auto pt-3">
            <a href="{{ path('admin_locais_new') }}" class="btn btn-primary">
                <i class="fa fa-plus"></i>
                {{ 'admin.places.button.new'|trans }}
            </a>
        </div>
    </div>

    {% include "flashMessages.html.twig" %}

    <table class="table table-hover border">
        <thead>
            <tr class="table-primary">
                <th>#</th>
                <th>{{ 'label.name'|trans }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for local in locais %}
                <tr>
                    <td>
                        {{ local.id }}
                    </td>
                    <td>
                        {{ local.nome }}
                    </td>
                    <td class="text-end">
                        <a href="{{ path('admin_locais_edit', { id: local.id }) }}" class="btn btn-secondary">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
