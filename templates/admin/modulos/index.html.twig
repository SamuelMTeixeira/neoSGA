{% extends "admin.html.twig" %}

{% block adminContent %}
    <div class="d-flex">
        <div>
            <h1>{{ 'admin.modules.title'|trans }}</h1>
            <p>{{ 'admin.modules.subtitle'|trans }}</p>
        </div>
    </div>
        
    <table class="table table-hover border">
        <thead>
            <tr class="table-primary">
                <th>{{ 'label.module'|trans }}</th>
                <th>{{ 'label.enabled'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for module in modules %}
                <tr>
                    <td>{{ module.displayName }}</td>
                    <td>
                        <input type="checkbox" value="1" disabled {% if module.active %}checked{% endif %} class="module-status" data-key="{{ module.key }}">
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
